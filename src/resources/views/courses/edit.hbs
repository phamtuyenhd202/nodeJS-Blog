<div class="m-5">
    <h1>Chỉnh sửa khóa học</h1>

    <form method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên khóa khọc</label>
            <input type="text" class="form-control" value="{{course.name}}" id="name" name="name" placeholder="Tên khóa học">
        </div>
        <div class="form-group">
            <label for="desription">Mô tả</label>
            <textarea class="form-control" id="desriprion" name="description" placeholder="Mô tả">{{course.description}}n</textarea>
        </div>
        <div class="form-group">
            <label for="VideoId">video Id</label>
            <input type="text" class="form-control" value="{{course.VideoId}}" id="VideoId" name="VideoId" placeholder="video"></input>
        </div>
         <div class="form-group">
            <label for="level">Trình độ</label>
            <input type="text" class="form-control" value="{{course.level}}" id="level" name="level" placeholder="trình độ trung bình"></input>
        </div>
        <button type="submit" class="btn btn-primary my-1">Sửa</button>
    </form>
</div>