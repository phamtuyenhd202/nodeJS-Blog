<div class="mt-5 mb-5">
    <div class="container">
        <div class="row">
            {{#each courses}}
            <div class="col-sm-4">
                <div class="card cart-item">
                <a href="/courses/{{this.slug}}"><img src="{{this.image}}" class="card-img-top" alt="..."></a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}"><h5 class="card-title">{{this.name}}</h5></a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Mua khóa học</a>
                </div>
                </div>
            </div>

            {{else}}
            <div class="m-5 container">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        Bạn chưa có khóa học nào.
                        <a href="courses/create">Đăng khóa học</a>
                    </div>
                </div>
                
            </div>
            {{/each}}
        </div>
    </div>
</div>